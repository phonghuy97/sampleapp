<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user %>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% end %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
</div>
